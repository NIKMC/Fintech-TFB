<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_window_focused="false" android:state_enabled="true">
        <layer-list>
            <item>
                <shape>
                    <!--<gradient android:angle="90" android:endColor="#FFFFFF" android:startColor="#FFFFFF" android:type="linear" />-->
                    <stroke android:width="1dp" android:color="@color/primary_dark_material_light" />
                    <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="right" android:src="@mipmap/ic_drawer" />
            </item>
        </layer-list>
    </item>
    <item android:state_window_focused="false" android:state_enabled="false">
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#FFFFFF" android:startColor="#FFFFFF" android:type="linear" />
                    <stroke android:width="1dp" android:color="@color/primary_dark_material_light" />
                    <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="right" android:src="@mipmap/ic_drawer" />
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="@color/dim_foreground_material_dark" android:startColor="@color/dim_foreground_material_dark" android:type="linear" />
                    <stroke android:width="1dp" android:color="@color/primary_dark_material_light" />
                    <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="right" android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha" />
            </item>
        </layer-list>
    </item>
</selector>